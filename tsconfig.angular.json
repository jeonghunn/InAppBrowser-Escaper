{
  "extends": "./tsconfig.json",
  "include": [
    "src/angular.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist/angular",
    "skipLibCheck": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
